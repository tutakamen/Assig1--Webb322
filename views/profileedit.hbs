<!doctype html>
<html>
    {{> header user}}

<body>
    <img src="Images/StayAnywhere Logo.jpg" alt="logo" class="logo1">
    <h1>Profile Editor</h1>
   
    <form method="POST" action="/profile/edit">
    <input type="hidden" name="oldEmail" value="{{user.email}}"/>
      <label class="fixedlabel">First Name:</label><input type="text" name="fname" value="{{user.fname}}"/><br/>
      <label class="fixedlabel">Last Name:</label><input type="text" name="lname" value="{{user.lname}}"/><br/>
      <label class="fixedlabel">E-mail:</label><input type="text" name="email" value="{{user.email}}" size="50"/><br/>
      {{#if user.isAdmin}}
      <label class="fixedlabel">Is Administrator:</label><input type="checkbox" name="admin" checked="{{user.admin}}"/><br/>
      {{/if}}
      <label class="fixedlabel"></label><button type="submit" name="submit">Submit</button>
    </form>
    {{> footer user}}
</body> 
</h